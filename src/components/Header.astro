---
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---
---

<header class="site-nav">
	<p class="site-nav__eyebrow">个人博客</p>
	<a class="site-nav__title" href="/">{SITE_TITLE}</a>
	<p class="site-nav__description">
		{SITE_DESCRIPTION}
	</p>
	<nav class="site-nav__links">
		<HeaderLink href="/" class="site-nav__link">首页</HeaderLink>
		<HeaderLink href="/blog" class="site-nav__link">文章</HeaderLink>
		<HeaderLink href="/about" class="site-nav__link">关于</HeaderLink>
		<HeaderLink href="/now" class="site-nav__link">Now</HeaderLink>
	</nav>
	<div class="site-nav__meta">
		<a href="/rss.xml" class="site-nav__rss">RSS 订阅</a>
	</div>
</header>
<style>
	.site-nav {
		background: #fff;
		border-radius: 18px;
		border: 1px solid rgba(var(--gray-light), 0.9);
		box-shadow: 0 15px 40px rgba(var(--black), 0.05);
		padding: 1.75rem;
	}

	.site-nav__eyebrow {
		margin: 0;
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: rgba(var(--gray-dark), 0.6);
	}

	.site-nav__title {
		display: block;
		font-size: 1.8rem;
		font-weight: 700;
		margin: 0.2rem 0 0.5rem;
		color: rgb(var(--black));
		text-decoration: none;
	}

	.site-nav__description {
		margin: 0 0 1.5rem 0;
		color: rgba(var(--gray-dark), 0.85);
		font-size: 0.95rem;
		line-height: 1.5;
	}

	.site-nav__links {
		display: flex;
		flex-direction: column;
		gap: 0.35rem;
		margin-bottom: 1.5rem;
	}

	.site-nav__link {
		padding: 0.5rem 0;
		color: rgb(var(--gray-dark));
		border-bottom: none;
		font-weight: 500;
	}

	.site-nav__link.active {
		color: rgb(var(--black));
	}

	.site-nav__meta {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		font-size: 0.85rem;
		color: rgba(var(--gray-dark), 0.7);
	}

	.site-nav__rss {
		text-decoration: none;
		color: rgb(var(--accent));
		font-weight: 600;
	}

	@media (max-width: 1100px) {
		.site-nav {
			position: relative;
		}
	}
</style>
