---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import rehypeSlug from 'rehype-slug';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import { rehypeExtractHeadings, getExtractedHeadings } from '../../utils/extractHeadings';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post, {
	remarkPlugins: [],
	rehypePlugins: [rehypeSlug, rehypeExtractHeadings],
});

// Get headings after render and filter to depth 2-3
const allHeadings = getExtractedHeadings();
const tocHeadings = allHeadings.filter((h) => h.depth === 2 || h.depth === 3);
---

<!doctype html>
<html lang="zh">
	<head>
		<BaseHead title={post.data.title} description={post.data.summary || ''} />
		<style>
			main {
				width: 1200px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 2em 1em;
			}
			.post-layout {
				display: flex;
				gap: 2em;
				align-items: flex-start;
			}
			.post-content-wrapper {
				flex: 1;
				min-width: 0;
			}
			.post-header {
				margin-bottom: 2em;
			}
			.post-title {
				margin: 0 0 0.5em 0;
				font-size: 2em;
			}
			.post-date {
				color: rgb(var(--gray));
				margin-bottom: 1em;
			}
			.post-tags {
				display: flex;
				gap: 0.5em;
				margin-bottom: 2em;
				flex-wrap: wrap;
			}
			.tag {
				display: inline-block;
				padding: 0.2em 0.6em;
				background: rgba(var(--accent), 0.1);
				color: rgb(var(--accent));
				border-radius: 4px;
				font-size: 0.85em;
			}
			.post-content {
				line-height: 1.6;
				color: rgb(var(--gray-dark));
			}
			.post-content :global(h2),
			.post-content :global(h3) {
				scroll-margin-top: 2em;
			}
			.toc-mobile {
				display: none;
			}
			.toc-desktop {
				display: block;
			}
			@media (max-width: 720px) {
				.post-layout {
					flex-direction: column;
				}
				.toc-mobile {
					display: block;
				}
				.toc-desktop {
					display: none;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article>
				<header class="post-header">
					<h1 class="post-title">{post.data.title}</h1>
					<div class="post-date">
						<FormattedDate date={post.data.date} />
					</div>
					{
						post.data.tags && post.data.tags.length > 0 && (
							<div class="post-tags">
								{
									post.data.tags.map((tag) => (
										<span class="tag">{tag}</span>
									))
								}
							</div>
						)
					}
					{
						tocHeadings.length > 0 && (
							<div class="toc-mobile">
								<TableOfContents headings={tocHeadings} />
							</div>
						)
					}
				</header>
				<div class="post-layout">
					<div class="post-content-wrapper">
						<div class="post-content">
							<Content />
						</div>
					</div>
					{
						tocHeadings.length > 0 && (
							<div class="toc-desktop">
								<TableOfContents headings={tocHeadings} />
							</div>
						)
					}
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
